{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES6",
      "ES2015.Promise",
      "es2015.core",
      "ScriptHost"
    ],
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/lib/**/*",
    "typings"
  ]
}

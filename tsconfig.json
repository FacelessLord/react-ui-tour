{
    "compilerOptions": {

        // decorators are not supported by TS targeting es3
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "types": [
            "classnames",
            "requirejs",
            "react",
            "react-dom"
        ],

        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["DOM", "ES5", "ES2015.Promise", "es2015.core", "ScriptHost" ]
    },
    "include": [
        "stories",
        "src",
        "typings"
    ]
}

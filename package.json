{
  "name": "react-ui-tour",
  "version": "0.8.2",
  "description": "react tours library",
  "repository": "https://github.com/skbkontur/react-ui-tour.git",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.dev.js",
    "build": "node build.prod.js",
    "build-doc": "webpack --config config/webpack.prod.js",
    "publish-doc": "rimraf dist && git clone -b gh-pages git@github.com:skbkontur/react-ui-tour.git dist && npm run build-doc && cd dist && git add --all && git commit --allow-empty -m \"published doc\" && git push && cd ..",
    "cmbuild": "npm i && npm run build",
    "storybook": "start-storybook -p 6006",
    "prepublish": "npm run test && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0",
    "react-dom": "^0.14.0 || ^15.0.0-0 || ^16.0.0",
    "@skbkontur/react-ui": "<1.0.0"
  },
  "devDependencies": {
    "@extern/tslint": "^1.0.1",
    "@skbkontur/react-ui": "^0.11.0",
    "@storybook/addon-actions": "^4.0.0-alpha.2",
    "@storybook/react": "^4.0.0-alpha.2",
    "@storybook/ui": "^4.0.0-alpha.2",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.6",
    "@types/jest": "^21.1.8",
    "@types/react": "^15.6.15",
    "@types/react-dom": "^15.5.7",
    "awesome-typescript-loader": "^5.0.0",
    "classnames": "^2.2.5",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "hard-source-webpack-plugin": "^0.6.4",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jest-css-modules-transform": "^1.1.0",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "prettier": "^1.12.0",
    "react": "^15.6.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-test-renderer": "^15.6.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.3",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "keywords": [],
  "author": "Vladimir Tolstikov",
  "license": "ISC",
  "files": [
    "build/"
  ],
  "jest": {
    "setupFiles": [
      "./setupTests.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".+\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts"
    }
  }
}
